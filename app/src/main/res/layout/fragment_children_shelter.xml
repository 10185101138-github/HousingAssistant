<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8d81bd">

    <ImageView
        android:id="@+id/upper"
        android:layout_width="448dp"
        android:layout_height="172dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/children_shelter1" />

    <ImageButton
        android:id="@+id/children_shelter_setting"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@color/transparent"
        android:scaleX="2"
        android:scaleY="2"
        android:tint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/illumination" />

    <ImageButton
        android:id="@+id/children_shelter_button1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upper"
        app:srcCompat="@drawable/children_shelter_button1" />

    <ImageButton
        android:id="@+id/children_shelter_button2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/children_shelter_button1"
        app:layout_constraintTop_toBottomOf="@+id/upper"
        app:srcCompat="@drawable/children_shelter_button2" />

    <ImageButton
        android:id="@+id/children_shelter_button3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speaker"
        app:srcCompat="@drawable/children_shelter_button3" />

    <ImageButton
        android:id="@+id/children_shelter_button4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/children_shelter_button3"
        app:layout_constraintTop_toBottomOf="@+id/lighting"
        app:srcCompat="@drawable/children_shelter_button4" />

    <TextView
        android:id="@+id/speaker"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="65dp"
        android:gravity="center"
        android:text="@string/speaker"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/children_shelter_button1" />

    <TextView
        android:id="@+id/lighting"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="65dp"
        android:gravity="center"
        android:text="@string/lighting"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/speaker"
        app:layout_constraintTop_toBottomOf="@+id/children_shelter_button2" />

    <TextView
        android:id="@+id/curtain"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="65dp"
        android:gravity="center"
        android:text="@string/curtain"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/children_shelter_button3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/add_new_devices"
        android:layout_width="93dp"
        android:layout_height="37dp"
        android:layout_marginEnd="65dp"
        android:gravity="center"
        android:text="@string/add_new_devices"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/curtain"
        app:layout_constraintTop_toBottomOf="@+id/children_shelter_button4"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>